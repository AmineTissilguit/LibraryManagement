FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build-env
WORKDIR /app

# Copy project files for restore
COPY src/LibraryManagement.API/*.csproj src/LibraryManagement.API/
COPY src/LibraryManagement.Application/*.csproj src/LibraryManagement.Application/
COPY src/LibraryManagement.Domain/*.csproj src/LibraryManagement.Domain/
COPY src/LibraryManagement.Infrastructure/*.csproj src/LibraryManagement.Infrastructure/

RUN dotnet restore "src/LibraryManagement.API/LibraryManagement.API.csproj"

# Copy everything and publish
COPY . .
RUN dotnet publish src/LibraryManagement.API/LibraryManagement.API.csproj -c Release -o out

FROM mcr.microsoft.com/dotnet/aspnet:9.0
WORKDIR /app
COPY --from=build-env /app/out .
EXPOSE 8080
ENTRYPOINT ["dotnet", "LibraryManagement.API.dll"]